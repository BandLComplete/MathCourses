@using InProcess.Controllers
@model User

<h1 class=" row col-12 justify-content-center">Регистрация</h1>

<form asp-controller="Home" asp-action="ProfileEdit">
    <div class="form-inline row col-12 m-1">
        <label class="control-label col-3">Имя</label>
        <input class="form-control col-6" name="firstName" type="search" placeholder="Имя" value="@Model.FirstName">
    </div>
    
    <div class="form-inline row col-12 m-1">
        <label class="control-label col-3">Фамилия</label>
        <input class="form-control col-6" name="secondName" type="search" placeholder="Фамилия" value="@Model.SecondName">
    </div>
    
    <div class="form-inline row col-12 m-1">
        <label class="control-label col-3">Пароль</label>
        <input class="form-control col-6" name="password" type="search" placeholder="Пароль" value="@Model.Password">
    </div>
    
    <div class="row col-12 justify-content-center m-1">
        <div class="dropdown col-6">
            <button class="btn btn-secondary dropdown-toggle col-12" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Мои компетенции
            </button>
            <div class="dropdown-menu col-12" aria-labelledby="dropdownMenu1">
                @foreach (var competence in HomeController.Competences)
                {
                    <div class="dropdown-item form-check">
                        <input class="form-check-input" value="@competence" type="checkbox" name="current" id="@competence" @Model.CurrentCompetences.GetCheckedString(competence)>
                        <label class="form-check-label" for="@competence">@competence</label>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="row col-12 justify-content-center m-1">
        <div class="dropdown col-6">
            <button class="btn btn-secondary dropdown-toggle col-12" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Желаемые компетенции
            </button>
            <div class="dropdown-menu col-12" aria-labelledby="dropdownMenu2">
                @foreach (var competence in HomeController.Competences)
                {
                    <div class="dropdown-item form-check">
                        <input class="form-check-input" value="@competence" type="checkbox" name="desired" id="@competence" @Model.CurrentCompetences.GetCheckedString(competence)>
                        <label class="form-check-label" for="@competence">@competence</label>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row col-12 justify-content-center">
        <button class="btn btn-outline-success " type="submit">Сохранить</button>
    </div>
</form>