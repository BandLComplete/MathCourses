@using InProcess.Controllers
@model User

<h1 class="row col-12">Личный кабинет</h1>

<div class="row col-12">
    <div class="col-3">
        <div class="row justify-content-center"><img height="200" src="/user.png" alt="user"></div>
        <h4 class="row justify-content-center">@Model.SecondName @Model.FirstName</h4>
        <h5 class="row justify-content-center">@Model.Email</h5>
    </div>
    
    <div class="col-9">
        <div class="row">
            <div class="col-4">
                <div class="card row border-primary mt-1 mb-1 mr-1">
                    <div class="card-header text-primary border-primary">
                        Мои компетенции
                    </div>
                    <div class="row m-0 pl-1 pt-1">
                        @foreach (var c in Model.CurrentCompetences)
                        {
                            <div class="col mr-1 mb-1 badge badge-warning" style="white-space: normal">@c</div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="card row border-primary  mt-1 mb-1 mr-1">
                    <div class="card-header text-primary">
                        Желаемые компетенции
                    </div>
                    <ul class="list-group list-group-flush" style="text-align:center;">
                        @foreach (var c in Model.DesiredCompetences)
                        {
                            <li class="list-group-item bg-primary">
                                <span class="badge badge-warning" style="white-space: normal">@c</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="row col-12 justify-content-center">
            <a class="row btn btn-outline-primary" asp-controller="Home" asp-action="ProfileEdit">
                Редактировать
            </a>
        </div>
        
        
        <h4 class="row">Мои курсы</h4>
                
        <div class="row">
            @foreach (var course in Model.Courses)
            {
                <div class="col-4">
                    <div class="card row border-primary mt-1 mb-1 mr-1">
                        <div class="card-header text-primary">
                            @course
                        </div>
                        
                        <ul class="list-group list-group-flush" style="text-align:center;">
                            @foreach (var competence in HomeController.Courses[course].Competences)
                            {
                                <li class="list-group-item bg-primary">
                                    <span class="badge badge-warning" style="white-space: normal">@competence</span>
                                </li>
                            }
                        </ul>

                        <a class="btn btn-warning" asp-controller="Home" asp-action="Course" asp-route-name="@course">
                            Подробнее
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
