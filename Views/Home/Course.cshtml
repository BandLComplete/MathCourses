@using InProcess.Controllers
@model Course

<div class="row col-12">
    <div class="col-8">
        <h3 class="row mb-0" style="height: 100px">@Model.Name</h3>
        <div class="row  border-primary border-bottom align-items-end" style="height: 50px">@Model.Depth</div>
        <p class="row">@Model.Feature</p>
        <h3 class="row">Материалы курса</h3>
        <p class="row">@Model.Content</p>
    </div>
    
    <div class="col-4 pl-0 pr-0">
        <div class="card pl-0 pr-0">
            <img src="/course_bg.jpg" class="card-header border-bottom border-primary p-0" style="height: 149px" alt="course image">
            <div class="card-body">
                <div class="row pl-3">
                    <div class="col pl-0">Компетенции: </div>
                    @foreach (var c in Model.Competences)
                    {
                        <div class="col mr-1 mb-1 badge badge-warning" style="white-space: normal">@c</div>
                    }
                </div>
                
                Формат: @Model.Format.ToCustomString()<br/>
                Для кого: @Model.Complexity.ToCustomString()<br/>
                Длительность: @Model.Length часов<br/>
                Практика: @Model.Practice.ToCustomString()<br/>
                Стоимость: @Model.Free.ToCostString()<br/>

                <a href="@Model.Url" class="btn btn-warning">
                    Перейти на сайт курса
                </a>

                @if (HomeController.CurrentUser != null)
                {
                    if (HomeController.CurrentUser.Courses.Contains(Model.Name))
                    {
                        <a asp-controller="Home" asp-action="Course" asp-route-name="@Model.Name" asp-route-courseAction="Remove" class="btn btn-warning mt-1">
                            Удалить из моих курсов
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Course" asp-route-name="@Model.Name" asp-route-courseAction="Add" class="btn btn-warning mt-1">
                            Добавить в мои курсы
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-3">
        <div class="row p-1">
            <img src="/item.png" alt="*" class="img-fluid"/> Практика: @Model.Practice.ToCustomString()
        </div>
        <div class="row p-1">
            <img src="/item.png" alt="*" class="img-fluid"/> Сложность: @Model.Complexity.ToCustomString()
        </div>
        <div class="row p-1">
            <img src="/item.png" alt="*" class="img-fluid"/> Формат: @Model.Format.ToCustomString()
        </div>
        <div class="row p-1">
            <img src="/item.png" alt="*" class="img-fluid"/> Стоимость: @Model.Free.ToCostString()
        </div>
        <div class="row p-1">
            <img src="/item.png" alt="*" class="img-fluid"/> Длительность: @Model.Length часов
        </div>
        <div class="row pt-1 pl-1 pr-1">
            <img src="/item.png" alt="*" class="img-fluid"/> Глубина:
        </div>
        <div class="row pb-1 pl-1 pr-1">
            @Model.Depth
        </div>

        <a href="@Model.Url" class="btn btn-primary m-1">
            Перейти на сайт курса
        </a>
        @if (HomeController.CurrentUser != null)
        {
            if (HomeController.CurrentUser.Courses.Contains(Model.Name))
            {
                <a asp-controller="Home" asp-action="Course" asp-route-name="@Model.Name" asp-route-courseAction="Remove" class="btn btn-primary m-1">
                    Удалить из моих курсов
                </a>
            }
            else
            {
                <a asp-controller="Home" asp-action="Course" asp-route-name="@Model.Name" asp-route-courseAction="Add" class="btn btn-primary m-1">
                    Добавить в мои курсы
                </a>
            }

        }
    </div>
    <div class="col-9">
        <div class="row m-1">
            <h5>Содержание</h5>
            @Model.Content
        </div>
        <div class="row m-1">
            <h5>Особенности</h5>
            @Model.Feature
        </div>

    </div>
</div>